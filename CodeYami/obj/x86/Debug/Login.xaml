<Page
    x:Class="CodeYami.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CodeYami"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:gif="using:XamlAnimatedGif"

    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Margin="20">
            <TextBlock  FontSize="50"  Text="ウェルカム !" HorizontalAlignment="Center" Margin="20"/>
            <TextBox x:ConnectionId='2' x:Name="TaiKhoan" Header="UserName"   />
            <TextBox x:ConnectionId='3' x:Name="MatKhau" Header="PassWord"  />
            <StackPanel Orientation="Horizontal" Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button x:ConnectionId='4' Content="Login"                  Margin="20"/>
                <Button x:ConnectionId='5' Content="Rgister"                Margin="20"/>
            </StackPanel>
            <StackPanel>
                <Image gif:AnimationBehavior.SourceUri="https://media1.tenor.com/images/4766f7cfdd40539adea411f26be79613/tenor.gif?itemid=12159338"/>

            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

