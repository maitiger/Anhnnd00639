<Page
    x:Class="CodeYami.Menu.Account"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CodeYami.Menu"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Margin="30">
        <Image x:ConnectionId='2' x:Name="infoAvatar" Width="200" Height="200"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock x:ConnectionId='3' x:Name="Ulable" Grid.Row="0" Grid.Column="0" Margin="0,15,0,0"/>
            <TextBlock x:ConnectionId='4' x:Name="UserNameLable" Grid.Row="0" Grid.Column="1" Margin="0,15,0,0"/>
            <TextBlock x:ConnectionId='5' x:Name="Elable" Grid.Row="1" Grid.Column="0" Margin="0,15,0,0"/>
            <TextBlock x:ConnectionId='6' x:Name="EmailLable" Grid.Row="1" Grid.Column="1" Margin="0,15,0,0"/>
            <TextBlock x:ConnectionId='7' x:Name="Plable" Grid.Row="2" Grid.Column="0" Margin="0,15,0,0"/>
            <TextBlock x:ConnectionId='8' x:Name="PassLable" Grid.Row="2" Grid.Column="1" Margin="0,15,0,0"/>
            <TextBlock x:ConnectionId='9' x:Name="Phlable" Grid.Row="3" Grid.Column="0" Margin="0,15,0,0"/>
            <TextBlock x:ConnectionId='10' x:Name="PhoneLable" Grid.Row="3" Grid.Column="1" Margin="0,15,0,0"/>
            <TextBlock x:ConnectionId='11' x:Name="Glable" Grid.Row="4" Grid.Column="0"  Margin="0,15,0,0" />
            <TextBlock x:ConnectionId='12' x:Name="GenderLable" Grid.Row="4" Grid.Column="1"  Margin="0,15,0,0"/>
            <TextBlock x:ConnectionId='13' x:Name="Dlable" Grid.Row="5" Grid.Column="0"  Margin="0,15,0,0"/>
            <TextBlock x:ConnectionId='14' x:Name="DateLable" Grid.Row="5" Grid.Column="1"  Margin="0,15,0,0"/>
            <TextBlock x:ConnectionId='15' x:Name="Alable" Grid.Row="6" Grid.Column="0"  Margin="0,15,0,0"/>
            <TextBlock x:ConnectionId='16' x:Name="AddressLable" Grid.Row="6" Grid.Column="1"  Margin="0,15,0,0"/>
            <TextBlock x:ConnectionId='17' x:Name="ILable" Grid.Row="7" Grid.Column="0"  Margin="0,15,0,0"/>
            <TextBlock x:ConnectionId='18' x:Name="IntroLable" Grid.Row="7" Grid.Column="1"  Margin="0,15,0,0"/>
        </Grid>


    </StackPanel>
</Page>

